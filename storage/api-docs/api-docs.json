    "paths": {
        "/api/merchant/mfs-payouts": {
            "post": {
                "tags": [
                    "MFS Payouts"
                ],
                "summary": "Create a new MFS payout batch",
                "operationId": "9eda1c0229582ab9ca70b9b53126b2c5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "merchant_id": {
                                        "type": "string",
                                        "example": "faastpay"
                                    },
                                    "batch_id": {
                                        "type": "string",
                                        "example": "MFS-ABC123XYZ"
                                    },
                                    "payouts": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "reference_key": {
                                                    "type": "string",
                                                    "example": "MFS-REF001"
                                                },
                                                "wallet_number": {
                                                    "type": "string",
                                                    "example": "01712345678"
                                                },
                                                "amount": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 100
                                                },
                                                "method": {
                                                    "type": "string",
                                                    "enum": [
                                                        "bKash",
                                                        "Nagad"
                                                    ]
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Batch created successfully"
                    },
                    "400": {
                        "description": "Insufficient balance"
                    },
                    "422": {
                        "description": "Validation errors"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/merchant/mfs-payouts/batch/{batchId}": {
            "get": {
                "tags": [
                    "MFS Payouts"
                ],
                "summary": "Fetch MFS payout batch details by Batch ID",
                "description": "Returns list of MFS payouts for the given batch ID",
                "operationId": "0c9df7167b3a107802c05c30f7bd65c9",
                "parameters": [
                    {
                        "name": "batchId",
                        "in": "path",
                        "description": "The batch ID of the MFS payouts to fetch",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "MFS-ABC123XYZ"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Batch details fetched successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "batch_id": {
                                            "type": "string",
                                            "example": "MFS-ABC123XYZ"
                                        },
                                        "total_count": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "total_amount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 300
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "reference_key": {
                                                        "type": "string",
                                                        "example": "MFS-REF001"
                                                    },
                                                    "wallet_number": {
                                                        "type": "string",
                                                        "example": "01712345678"
                                                    },
                                                    "amount": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 100
                                                    },
                                                    "method": {
                                                        "type": "string",
                                                        "example": "bkash"
                                                    },
                                                    "status": {
                                                        "type": "string",
                                                        "example": "Pending"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Batch not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "type": "integer",
                                            "example": 404
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "No data found for this batch ID."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
