        "/api/merchant/token": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Merchant Login - Get Bearer Token",
                "operationId": "df461efdcc9e8203a7ae2ce8aa717751",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "merchant@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful login and token issued",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "your-bearer-token"
                                        },
                                        "merchant_id": {
                                            "type": "string",
                                            "example": "merchant123"
                                        },
                                        "user": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "Demo Merchant"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "merchant@example.com"
                                                },
                                                "merchant_id": {
                                                    "type": "string",
                                                    "example": "merchant123"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized - invalid credentials",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "type": "integer",
                                            "example": 401
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid credentials"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "type": "integer",
                                            "example": 422
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Validation failed"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/merchant/payouts": {
            "post": {
                "tags": [
                    "Bank Payouts"
                ],
                "summary": "Create a new Bank Payout Batch",
                "operationId": "160af7702b43c9be78c50a5c13d47eee",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "merchant_id",
                                    "batch_id",
                                    "payouts"
                                ],
                                "properties": {
                                    "merchant_id": {
                                        "type": "string",
                                        "example": "faastpay"
                                    },
                                    "batch_id": {
                                        "type": "string",
                                        "example": "BANK-ABC123XYZ"
                                    },
                                    "payouts": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "referenceKey": {
                                                    "type": "string",
                                                    "example": "BANK-REF001"
                                                },
                                                "amount": {
                                                    "type": "number",
                                                    "example": 500
                                                },
                                                "currency": {
                                                    "type": "string",
                                                    "example": "BDT"
                                                },
                                                "remarks": {
                                                    "type": "string",
                                                    "example": "Vendor payment"
                                                },
                                                "bankCode": {
                                                    "type": "string",
                                                    "example": "011"
                                                },
                                                "bankShortCode": {
                                                    "type": "string",
                                                    "example": "DBBL"
                                                },
                                                "benType": {
                                                    "type": "string",
                                                    "example": "individual"
                                                },
                                                "txnChannel": {
                                                    "type": "string",
                                                    "example": "BEFTN"
                                                },
                                                "beneficiaryAcc": {
                                                    "type": "string",
                                                    "example": "123456789"
                                                },
                                                "beneficiaryName": {
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "beneficiaryEmail": {
                                                    "type": "string",
                                                    "example": "john@example.com"
                                                },
                                                "routingNumber": {
                                                    "type": "string",
                                                    "example": "123456789"
                                                },
                                                "txnChannelCode": {
                                                    "type": "string",
                                                    "example": "beftn"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payouts created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "type": "integer",
                                            "example": 200
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Payouts created for batch: BANK-ABC123XYZ"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Insufficient balance"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
